<div class="product-card">
  <div class="product-card__image-wrap">
    <img class="product-card__image"
      src="{{ product.featured_image | image_url: width:600, height:600 }}"
      height="600" width="600" alt="{{ product.title }}">
  </div>

  <div class="product-card__details">
    <h1 class="product-card__title">{{ product.title }}</h1>

    <p class="product-card__price">
      {{ product.price | money }}
    </p>

    {% if product.description %}
      <p class="product-card__desc">{{ product.description | strip_html | truncatewords: 30 }}</p>
    {% endif %}

    {% form 'product', product %}
      
      <div class="product-card__form-row">
        <label for="quantity">Quantity</label>
        <input type="number" id="quantity" name="quantity" min="1" value="1" class="product-card__qty">
      </div>

      
      {% for option in product.options_with_values %}
        <div class="product-card__form-row">
          <span>{{ option.name }}</span>

          {% if option.name == 'Color' %}
            
            <div class="product-card__swatches">
              {% for value in option.values %}
                <label class="swatch">
                  <input
                    type="radio"
                    name="options[{{ option.name }}]"
                    value="{{ value }}"
                    {% if option.selected_value == value %} checked {% endif %}
                  >
                  <span>{{ value }}</span>
                </label>
              {% endfor %}
            </div>

          {% elsif option.name == 'Size' %}
            <!-- Size buttons -->
            <div class="product-card__sizes">
              {% for value in option.values %}
                <label class="size-btn">
                  <input
                    type="radio"
                    name="options[{{ option.name }}]"
                    value="{{ value }}"
                    {% if option.selected_value == value %} checked {% endif %}
                  >
                  <span>{{ value }}</span>
                </label>
              {% endfor %}
            </div>
          {% endif %}
        </div>
      {% endfor %}

      <button type="submit" class="product-card__add-btn">Add to cart</button>
    {% endform %}
  </div>
</div>


{% stylesheet %}
.product-card {
  display: flex;
  flex-wrap: wrap;
  gap: 2em;
  background: #fff;
  border-radius: 12px;
  box-shadow: 0 2px 12px rgba(0,0,0,0.06);
  padding: 2em;
  max-width: 800px;
  margin: 2em auto;
}
.product-card__image-wrap {
  flex: 1 1 320px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.product-card__image {
  width: 100%;
  max-width: 400px;
  border-radius: 8px;
  object-fit: cover;
  box-shadow: 0 1px 6px rgba(0,0,0,0.05);
}
.product-card__details {
  flex: 1 1 320px;
  display: flex;
  flex-direction: column;
  gap: 1em;
  justify-content: center;
}
.product-card__title {
  font-size: 2em;
  font-weight: bold;
  margin-bottom: 0.2em;
}
.product-card__price {
  font-size: 1.3em;
  color: #1a1a1a;
  font-weight: bold;
  margin-bottom: 0.5em;
}
.product-card__desc {
  color: #555;
  font-size: 1em;
  margin-bottom: 1em;
}
.product-card__form-row {
  display: flex;
  flex-direction: column;
  margin-bottom: 1em;
}
.product-card__qty {
  padding: 0.5em;
  border: 1px solid #ddd;
  border-radius: 6px;
  font-size: 1em;
  margin-top: 0.3em;
}

/* Color swatches */
.product-card__swatches {
  display: flex;
  gap: 10px;
  margin-top: 0.5em;
}
.swatch input {
  display: none;
}
.swatch span {
  display: inline-block;
  padding: 8px 14px;
  border: 1px solid #ccc;
  border-radius: 6px;
  cursor: pointer;
  font-size: 14px;
}
.swatch input:checked + span {
  border-color: #000;
  background: #000;
  color: #fff;
}

/* Size buttons */
.product-card__sizes {
  display: flex;
  gap: 10px;
  margin-top: 0.5em;
}
.size-btn input {
  display: none;
}
.size-btn span {
  display: inline-block;
  padding: 8px 14px;
  border: 1px solid #ccc;
  border-radius: 6px;
  cursor: pointer;
  font-size: 14px;
}
.size-btn input:checked + span {
  border-color: #000;
  background: #000;
  color: #fff;
}

.product-card__add-btn {
  background: #222;
  color: #fff;
  border: none;
  border-radius: 6px;
  padding: 0.8em 2em;
  font-size: 1.1em;
  font-weight: bold;
  cursor: pointer;
  transition: background 0.2s;
}
.product-card__add-btn:hover {
  background: #444;
}
@media (max-width: 700px) {
  .product-card {
    flex-direction: column;
    padding: 1em;
  }
  .product-card__image-wrap,
  .product-card__details {
    flex: 1 1 100%;
    max-width: 100%;
  }
}
{% endstylesheet %}


