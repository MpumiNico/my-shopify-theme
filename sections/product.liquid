<div class="cartel-product-card">
  <div class="cartel-product-card__image-wrap">
    <img class="cartel-product-card__image"
         src="{{ product.featured_image | image_url: width:600, height:600 }}"
         height="600" width="600" alt="{{ product.title }}">
  </div>
  <div class="cartel-product-card__details">
    <h1 class="cartel-product-card__title">{{ product.title }}</h1>
    <p class="cartel-product-card__price">{{ product.price | money }}</p>
    {% if product.description %}
      <p class="cartel-product-card__desc">{{ product.description | strip_html | truncatewords: 30 }}</p>
    {% endif %}
    {% form 'product', product %}
      {% for option in product.options_with_values %}
        <div class="cartel-product-card__form-row">
          <span class="cartel-product-card__option-label">{{ option.name }}:</span>
          <div class="cartel-product-card__option-values">
            {% for value in option.values %}
              <label class="cartel-option-btn">
                <input type="radio"
                       name="options[{{ option.name }}]"
                       value="{{ value }}"
                       {% if option.selected_value == value %} checked {% endif %}>
                <span>{{ value }}</span>
              </label>
            {% endfor %}
          </div>
        </div>
      {% endfor %}
      <div class="cartel-product-card__form-row--actions">
        <label for="quantity">Qty</label>
        {% comment %} <input type="number" id="quantity" name="quantity" min="1" value="1" class="cartel-product-card__qty"> {% endcomment %}
        <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
        <button type="submit" class="cartel-product-card__add-btn">Add to cart</button>
      </div>
    {% endform %}
  </div>
</div>
{% stylesheet %}
.cartel-product-card {
  display: flex;
  flex-wrap: wrap;
  gap: 2.5em;
  background: #fff;
  border-radius: 12px;
  box-shadow: 0 8px 24px rgba(44,62,80,0.08);
  padding: 2em;
  max-width: 820px;
  margin: 2em auto;
}
.cartel-product-card__image-wrap {
  flex: 1 1 340px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.cartel-product-card__image {
  width: 100%;
  max-width: 440px;
  border-radius: 12px;
  object-fit: cover;
  box-shadow: 0 4px 18px rgba(44,62,80,0.06);
}
.cartel-product-card__details {
  flex: 1 1 280px;
  display: flex;
  flex-direction: column;
  gap: 1.4em;
  justify-content: center;
}
.cartel-product-card__title {
  font-size: 2.2em;
  font-weight: 800;
  margin-bottom: 0.2em;
  color: #263238;
}
.cartel-product-card__price {
  font-size: 1.5em;
  color: #e7515a;
  font-weight: bold;
  margin-bottom: 0.6em;
}
.cartel-product-card__desc {
  color: #56696d;
  font-size: 1.08em;
}
.cartel-product-card__form-row {
  display: flex;
  flex-direction: column;
  margin-bottom: 1.25em;
}
.cartel-product-card__option-label {
  font-weight: 700;
  font-size: 1em;
  margin-bottom: 0.8em;
}
.cartel-product-card__option-values {
  display: flex;
  gap: 12px;
}
.cartel-option-btn input {
  display: none;
}
.cartel-option-btn span {
  display: inline-block;
  padding: 10px 20px;
  border: 2px solid #e0e0e0;
  border-radius: 7px;
  cursor: pointer;
  font-size: 15px;
  background: #f6f7f9;
  font-weight: 600;
  color: #263238;
  transition: background 0.18s, border-color 0.18s;
}
.cartel-option-btn input:checked + span {
  border-color: #e7515a;
  background: #f3e1e0;
  color: #e7515a;
}
.cartel-product-card__form-row--actions {
  display: flex;
  align-items: center;
  gap: 17px;
  margin-top: 18px;
}
.cartel-product-card__qty {
  width: 60px;
  padding: 0.35em;
  border: 1px solid #ccc;
  border-radius: 6px;
  font-size: 1em;
  text-align: center;
}
.cartel-product-card__add-btn {
  background: #e7515a;
  color: #fff;
  border: none;
  border-radius: 7px;
  padding: 0.85em 2.4em;
  font-size: 1.15em;
  font-weight: bold;
  cursor: pointer;
  transition: background 0.19s;
  box-shadow: 0 2px 11px rgba(44,62,80,0.07);
}
.cartel-product-card__add-btn:hover {
  background: #b7232e;
}
@media (max-width: 700px) {
  .cartel-product-card {
    flex-direction: column;
    padding: 1em;
  }
  .cartel-product-card__image-wrap,
  .cartel-product-card__details {
    flex: 1 1 100%;
    max-width: 100%;
  }
  .cartel-product-card__title { font-size: 1.7em; }
  .cartel-product-card__price { font-size: 1.2em; }
}

{%endstylesheet %}