<h1 class="cart-title">My Bag</h1>
{% if cart.item_count == 0 %}
  <div class="cart-empty">
    <p>Your bag is empty.</p>
    <a href="/" class="cart-continue-btn">Continue Shopping</a>
  </div>
{% else %}
  <form action="/cart" method="post" novalidate class="cart-form">
    <div class="cart-items">
      {% for item in cart.items %}
        <div class="cart-item">
          
          <div class="cart-item__image-wrap">
            <a href="{{ item.url }}">
              <img class="cart-item__image"
                   src="{{ item.image | image_url: width:200, height:260, crop:'center' }}"
                   alt="{{ item.product.title }}"
                   loading="lazy" width="200" height="260">
            </a>
          </div>
          
          <div class="cart-item__details">
            <div class="cart-item__title-row">
              <a href="{{ item.url }}" class="cart-item__title">{{ item.product.title }}</a>
              <button type="submit" name="updates[]" value="0" class="cart-item__remove" title="Remove Item">
                <svg style="width:16px;height:16px;" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                </svg>
              </button>
            </div>
            <div class="cart-item__size">
              {% for option in item.options_with_values %}
                {% if option.name contains 'Size' %}
                  <span>Size: {{ option.value }}</span>
                {% endif %}
              {% endfor %}
            </div>
            <div class="cart-item__actions">
              <input class="cart-item__qty" type="number" name="updates[]" value="{{ item.quantity }}" min="1">
            </div>
          </div>
          
          <div class="cart-item__price">
            {{ item.final_line_price | money }}
          </div>
        </div>
      {% endfor %}
    </div>
    
    <div class="cart-summary">
      <div class="cart-summary__row">
        <span>Subtotal</span>
        <span>{{ cart.total_price | money }}</span>
      </div>
      <button type="submit" name="checkout" class="cart-checkout-btn">Checkout</button>
    </div>
  </form>
{% endif %}
{% stylesheet %}
.cart-form {
  max-width: 380px;
  width: 100%;
  position: fixed;
  top: 80px;
  right: 20px;
  background: #1a2651;
  color: #fff;
  border-radius: 10px;
  padding: 2em 1.5em;
  box-shadow: 0 4px 24px rgba(0,0,0,0.09);
  z-index: 999;
  max-height: 80vh;       
  overflow-y: auto;
}
@media (max-width: 900px) {
  .cart-form {
    position: static;
    max-width: 100%;
    border-radius: 0;
    box-shadow: none;
    padding: 1.2em 0.5em;
    max-height: none;
    overflow-y: visible;
  }
}
.cart-title {
  letter-spacing: 0.08em;
  line-height: 2;
  font-size: 2rem;
  font-weight: 800;
  text-align: left;
  margin-bottom: 1.3em;
  color: #fff;
}
.cart-items {
  display: flex;
  flex-direction: column;
  gap: 2em;
}
.cart-item {
  display: grid;
  grid-template-columns: 90px 1fr 80px;
  gap: 1em;
  align-items: center;
  padding-bottom: 1.3em;
  border-bottom: 1px solid #3153a4;
  background: none;
}
.cart-item__image-wrap img {
  border-radius: 6px;
}
.cart-item__details {
  display: flex;
  flex-direction: column;
  gap: 0.5em;
}
.cart-item__title-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 0.5em;
}
.cart-item__title {
  color: #fff;
  font-weight: 700;
  font-size: 1.05rem;
  text-decoration: none;
  max-width: 170px;
  white-space: normal;
  overflow-wrap: break-word;
}
.cart-item__remove {
  background: none;
  color: #e7515a;
  font-weight: 500;
  border: none;
  cursor: pointer;
  padding: 0;
  margin-left: 0.5em;
  display: flex;
  align-items: center;
}
.cart-item__remove svg {
  pointer-events: none;
}
.cart-item__size, .cart-item__qty {
  color: #b0b9d6;
}
.cart-item__actions {
  display: flex;
  align-items: center;
  gap: 0.6em;
}
.cart-item__qty {
  width: 42px;
  background: #232e52;
  border: none;
  color: #fff;
  text-align: center;
  border-radius: 5px;
}
.cart-item__price {
  font-weight: 700;
  font-size: 1rem;
  align-self: center;
  color: #e6c574;
  text-align: right;
}
.cart-summary {
  margin-top: 2em;
  display: flex;
  flex-direction: column;
  gap: 1em;
  border-top: 1px solid #3153a4;
  padding-top: 1.2em;
  background: none;
}
.cart-summary__row {
  display: flex;
  justify-content: space-between;
  font-size: 1rem;
  font-weight: 600;
  color: #fff;
}
.cart-checkout-btn {
  background: #e7515a;
  color: #fff;
  border: none;
  border-radius: 5px;
  padding: 0.7em 0;
  font-size: 1.05rem;
  font-weight: 700;
  cursor: pointer;
  width: 100%;
  text-transform: uppercase;
}
.cart-checkout-btn:hover { opacity: 0.92; }
.cart-empty {
  text-align: center;
  padding: 4em 0;
  color: #fff;
}
.cart-continue-btn {
  display: inline-block;
  margin-top: 1em;
  padding: 0.65em 1.6em;
  background: #e7515a;
  color: #fff;
  border-radius: 4px;
  font-weight: 600;
  text-decoration: none;
}

@media (max-width: 600px) {
  .cart-form {
    width: 100vw;
    padding: 1em 0.3em;
    top: 0;
    right: 0;
    left: 0;
  }
  .cart-item {
    grid-template-columns: 60px 1fr 60px;
    gap: 0.5em;
  }
  .cart-item__qty { width: 38px; }
}
{% endstylesheet %}
