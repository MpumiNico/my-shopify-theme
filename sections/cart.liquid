<h1 class="cart-title">My Bag</h1>

{% if cart.item_count == 0 %}
  <div class="cart-empty">
    <p>Your bag is empty.</p>
    <a href="/" class="cart-continue-btn">Continue Shopping</a>
  </div>
{% else %}
  <form action="/cart" method="post" novalidate class="cart-form">
    <div class="cart-items">
      {% for item in cart.items %}
        <div class="cart-item">
          <div class="cart-item__image-wrap">
            <a href="{{ item.url }}">
              <img class="cart-item__image"
                src="{{ item.image | image_url: width:200, height:260, crop:'center' }}"
                alt="{{ item.product.title }}"
                loading="lazy" width="200" height="260">
            </a>
          </div>
          <div class="cart-item__details">
            <a href="{{ item.url }}" class="cart-item__title">{{ item.product.title }}</a>

            
            <div class="cart-item__size">
              {% for option in item.options_with_values %}
                {% if option.name contains 'Size' %}
                  <span>Size: {{ option.value }}</span>
                {% endif %}
              {% endfor %}
            </div>

            
            <div class="cart-item__actions">
              <input class="cart-item__qty" type="number" name="updates[]" value="{{ item.quantity }}" min="1">
              <button type="submit" name="updates[]" value="0" class="cart-item__remove">Remove</button>
            </div>
          </div>

          <div class="cart-item__price">
            {{ item.final_line_price | money }}
          </div>
        </div>
      {% endfor %}
    </div>

    
    <div class="cart-summary">
      <div class="cart-summary__row">
        <span>Subtotal</span>
        <span>{{ cart.total_price | money }}</span>
      </div>
      <button type="submit" name="checkout" class="cart-checkout-btn">Checkout</button>
    </div>
  </form>
{% endif %}

{% stylesheet %}
.cart-title {
  text-align: center;
  font-size: 2rem;
  font-weight: 700;
  margin: 2em 0 1.5em 0;
  color: #111;
  font-family: 'Roboto', Arial, sans-serif;
}

.cart-form {
  max-width: 900px;
  margin: 0 auto 3em auto;
  font-family: 'Roboto', Arial, sans-serif;
}

.cart-items {
  display: flex;
  flex-direction: column;
  gap: 1.5em;
}

.cart-item {
  display: grid;
  grid-template-columns: 120px 1fr auto;
  gap: 1.5em;
  padding-bottom: 1.5em;
  border-bottom: 1px solid #eaeaea;
}
.cart-item__image-wrap img {
  width: 100%;
  height: auto;
  object-fit: contain;
}
.cart-item__details {
  display: flex;
  flex-direction: column;
  gap: 0.5em;
}
.cart-item__title {
  font-weight: 600;
  font-size: 1rem;
  color: #111;
  text-decoration: none;
}
.cart-item__size { font-size: 0.9rem; color: #555; }
.cart-item__actions {
  display: flex;
  gap: 1em;
  align-items: center;
}
.cart-item__qty {
  width: 50px;
  padding: 0.3em;
  border: 1px solid #ccc;
  font-size: 0.9rem;
}
.cart-item__remove {
  background: none;
  border: none;
  font-size: 0.9rem;
  color: #777;
  cursor: pointer;
}
.cart-item__remove:hover { color: #000; }
.cart-item__price {
  font-weight: 600;
  font-size: 1rem;
  color: #111;
  align-self: center;
}


.cart-summary {
  margin-top: 2.5em;
  border-top: 1px solid #eaeaea;
  padding-top: 1.5em;
  text-align: center;
}
.cart-summary__row {
  display: flex;
  justify-content: center;
  gap: 1.5em;
  font-size: 1rem;
  font-weight: 500;
  margin-bottom: 1.2em;
}
.cart-checkout-btn {
  padding: 1em 2em;
  background: #111;
  color: #fff;
  border: none;
  border-radius: 4px;
  font-weight: 600;
  font-size: 1rem;
  text-transform: uppercase;
  cursor: pointer;
}
.cart-checkout-btn:hover { opacity: 0.9; }
{% endstylesheet %}
