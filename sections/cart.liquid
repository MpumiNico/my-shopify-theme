{% comment %}
  Styled cart drawer/page similar to bash.com product page (excluding payment info, details, size guide, and sold by).
{% endcomment %}

<h1 class="cart-title">Your Shopping Bag</h1>

{% if cart.item_count == 0 %}
  <div class="cart-empty">
    <p>Your bag is empty.</p>
    <a href="/" class="cart-continue-btn">Continue Shopping</a>
  </div>
{% else %}
  <form action="/cart" method="post" novalidate class="cart-form">
    <div class="cart-items">
      {% for item in cart.items %}
        <div class="cart-item">
          <a href="{{ item.url }}" class="cart-item__image-wrap">
            <img class="cart-item__image"
              src="{{ item.image | image_url: width:200, height:260, crop:'center' }}"
              alt="{{ item.product.title }}"
              loading="lazy"
              width="200"
              height="260"
            >
          </a>
          <div class="cart-item__info">
            <a href="{{ item.url }}" class="cart-item__title">{{ item.product.title }}</a>
            <div class="cart-item__variant">
              {% for option in item.options_with_values %}
                <span class="cart-item__option">{{ option.name }}: {{ option.value }}</span>
              {% endfor %}
            </div>
            <div class="cart-item__qty-price">
              <input class="cart-item__qty" type="number" name="updates[]" value="{{ item.quantity }}" min="1">
              <span class="cart-item__price">{{ item.final_line_price | money }}</span>
            </div>
            <button type="submit" name="updates[]" value="0" class="cart-item__remove" aria-label="Remove">&times;</button>
          </div>
        </div>
      {% endfor %}
    </div>
    <div class="cart-summary">
      <div class="cart-summary__row">
        <span>Subtotal</span>
        <span class="cart-summary__price">{{ cart.total_price | money }}</span>
      </div>
      <button type="submit" name="checkout" class="cart-checkout-btn">Checkout</button>
    </div>
  </form>
{% endif %}

{% stylesheet %}
@import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@700;900&family=Roboto:wght@400;500&display=swap');

.cart-title {
  text-align: center;
  font-size: 2.2em;
  font-weight: 900;
  margin: 2em 0 1.5em 0;
  background: linear-gradient(90deg, #ff6a00, #ee0979, #00c3ff);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  text-fill-color: transparent;
  letter-spacing: 1px;
  font-family: 'Montserrat', Arial, sans-serif;
  text-transform: uppercase;
}

.cart-empty {
  text-align: center;
  margin: 4em 0;
}
.cart-continue-btn {
  display: inline-block;
  margin-top: 1.5em;
  padding: 0.9em 2.5em;
  background: #222;
  color: #fff;
  border-radius: 6px;
  font-family: 'Montserrat', Arial, sans-serif;
  font-weight: 700;
  text-decoration: none;
  font-size: 1em;
  transition: background 0.2s;
}
.cart-continue-btn:hover {
  background: #ee0979;
}

.cart-form {
  max-width: 700px;
  margin: 0 auto 3em auto;
  background: #fff;
  border-radius: 14px;
  box-shadow: 0 2px 16px rgba(0,0,0,0.08);
  padding: 2em 2em 1em 2em;
  font-family: 'Roboto', Arial, sans-serif;
}

.cart-items {
  display: flex;
  flex-direction: column;
  gap: 2em;
}

.cart-item {
  display: flex;
  gap: 1.5em;
  align-items: flex-start;
  border-bottom: 1px solid #eee;
  padding-bottom: 1.5em;
  position: relative;
}
.cart-item:last-child {
  border-bottom: none;
}

.cart-item__image-wrap {
  flex: 0 0 120px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fafafa;
  border-radius: 10px;
  overflow: hidden;
  aspect-ratio: 3/4;
  min-width: 100px;
  max-width: 120px;
  height: 160px;
}
.cart-item__image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

.cart-item__info {
  flex: 1 1 auto;
  display: flex;
  flex-direction: column;
  gap: 0.5em;
  min-width: 0;
}

.cart-item__title {
  font-family: 'Montserrat', Arial, sans-serif;
  font-weight: 700;
  font-size: 1.1em;
  color: #222;
  text-decoration: none;
  margin-bottom: 0.2em;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  display: inline-block;
  transition: color 0.2s;
}
.cart-item__title:hover {
  color: #ee0979;
}

.cart-item__variant {
  font-size: 0.98em;
  color: #666;
  margin-bottom: 0.2em;
  display: flex;
  gap: 1em;
  flex-wrap: wrap;
}
.cart-item__option {
  background: #f5f5f5;
  border-radius: 4px;
  padding: 0.1em 0.6em;
  font-size: 0.97em;
}

.cart-item__qty-price {
  display: flex;
  align-items: center;
  gap: 1em;
  margin-top: 0.5em;
}
.cart-item__qty {
  width: 48px;
  padding: 0.4em;
  border: 1px solid #ddd;
  border-radius: 6px;
  font-size: 1em;
  font-family: 'Roboto', Arial, sans-serif;
}
.cart-item__price {
  font-family: 'Roboto', Arial, sans-serif;
  font-size: 1.1em;
  font-weight: 500;
  color: #222;
}

.cart-item__remove {
  position: absolute;
  top: 0.5em;
  right: 0.5em;
  background: none;
  border: none;
  color: #bbb;
  font-size: 1.5em;
  cursor: pointer;
  transition: color 0.2s;
  line-height: 1;
}
.cart-item__remove:hover {
  color: #ee0979;
}

.cart-summary {
  margin-top: 2em;
  border-top: 1px solid #eee;
  padding-top: 1.5em;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 1.2em;
}
.cart-summary__row {
  display: flex;
  justify-content: space-between;
  width: 100%;
  font-size: 1.15em;
  font-family: 'Montserrat', Arial, sans-serif;
  font-weight: 700;
  letter-spacing: 0.5px;
}
.cart-summary__price {
  color: #222;
}
.cart-checkout-btn {
  margin-top: 1em;
  padding: 1em 3em;
  background: linear-gradient(90deg, #ff6a00, #ee0979, #00c3ff);
  color: #fff;
  border: none;
  border-radius: 8px;
  font-family: 'Montserrat', Arial, sans-serif;
  font-weight: 900;
  font-size: 1.1em;
  text-transform: uppercase;
  letter-spacing: 1px;
  cursor: pointer;
  transition: background 0.2s;
  box-shadow: 0 2px 8px rgba(0,0,0,0.06);
}
.cart-checkout-btn:hover {
  background: linear-gradient(90deg, #ee0979, #ff6a00, #00c3ff);
}

@media (max-width: 700px) {
  .cart-form {
    padding: 1em 0.5em 1em 0.5em;
  }
  .cart-items {
    gap: 1em;
  }
  .cart-item {
    flex-direction: column;
    align-items: stretch;
    gap: 0.7em;
    padding-bottom: 1em;
  }
  .cart-item__image-wrap {
    margin: 0 auto;
    min-width: 80px;
    max-width: 100px;
    height: 120px;
  }
}
{% endstylesheet %}
