{% comment %}
  This section is used in the list-collections template to render a list of
  collections.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/collection
{% endcomment %}

<h1 class="collections-title">{{ 'collections.title' | t }}</h1>

<div
  class="collections {{ section.settings.grid_item_width }}"
  style="--grid-gap: {{ section.settings.grid_gap }}px"
>
  {% for collection in collections %}
    <a class="collection-card" href="{{ collection.url }}">
      {% if collection.featured_image %}
        <div class="collection-card__image-wrap">
          {% render 'image',
            class: 'collection-card__image',
            image: collection.featured_image,
            width: 600,
            height: 800,
            crop: 'center'
          %}
        </div>
      {% endif %}

      <div class="collection-card__content">
        <p class="collection-card__title">{{ collection.title }}</p>

        {% assign featured_product = collection.products.first %}
        {% if featured_product %}
          <p class="collection-card__price">{{ featured_product.price | money }}</p>
          {% assign color_option = featured_product.options_with_values | where: "name", "Color" | first %}
          {% if color_option %}
            <div class="collection-card__colors">
              {% assign shown_colors = 0 %}
              {% for color in color_option.values %}
                {% assign color_downcase = color | downcase %}
                {% if color_downcase == 'black' or color_downcase == 'white' or color_downcase == 'blue' %}
                  {% assign shown_colors = shown_colors | plus: 1 %}
                  {% if color_downcase == 'black' %}
                    <span class="color-dot" style="background-color: #000;" title="Black"></span>
                  {% elsif color_downcase == 'white' %}
                    <span class="color-dot" style="background-color: #fff; border: 1px solid #bbb;" title="White"></span>
                  {% elsif color_downcase == 'blue' %}
                    <span class="color-dot" style="background-color: #0074d9;" title="Blue"></span>
                  {% endif %}
                {% endif %}
                {% if shown_colors == 3 %}
                  {% break %}
                {% endif %}
              {% endfor %}
            </div>
          {% endif %}
        {% endif %}
      </div>
    </a>
  {% endfor %}
</div>

{% stylesheet %}
  .collections-title {
    text-align: center;
    font-size: 2.5em;
    font-weight: bold;
    margin: 1.5em 0 2em 0;
    background: linear-gradient(90deg, #ff6a00, #ee0979, #00c3ff);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-fill-color: transparent;
    letter-spacing: 1px;
  }
  .collections {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
    gap: var(--grid-gap, 32px);
    padding: 2em 0;
  }
  .collection-card {
    background: #fff;
    border-radius: 12px;
    box-shadow: 0 2px 12px rgba(0,0,0,0.06);
    overflow: hidden;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-decoration: none;
    color: inherit;
    transition: box-shadow 0.2s;
    min-height: 420px;
    position: relative;
  }
  .collection-card:hover {
    box-shadow: 0 8px 32px rgba(0,0,0,0.13);
  }
  .collection-card__image-wrap {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    background: #fafafa;
    overflow: hidden;
    aspect-ratio: 3/4;
  }
  .collection-card__image {
    width: 100%;
    max-width: 260px;
    height: auto;
    object-fit: cover;
    transition: transform 0.3s cubic-bezier(.4,0,.2,1);
    border-radius: 0;
    display: block;
  }
  .collection-card:hover .collection-card__image {
    transform: scale(1.07);
  }
  .collection-card__content {
    width: 100%;
    padding: 1.2em 1em 1.5em 1em;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5em;
  }
  .collection-card__title {
    font-weight: 600;
    font-size: 1.15em;
    margin: 0.5em 0 0.2em 0;
    text-align: center;
    color: #222;
    text-decoration: none;
    letter-spacing: 0.5px;
  }
  .collection-card__price {
    color: #1a1a1a;
    font-size: 1.05em;
    font-weight: 500;
    margin-bottom: 0.4em;
  }
  .collection-card__colors {
    display: flex;
    gap: 0.4em;
    justify-content: center;
    margin-top: 0.2em;
  }
  .color-dot {
    display: inline-block;
    width: 18px;
    height: 18px;
    border-radius: 50%;
    border: 1px solid #ccc;
    background: #eee;
    margin: 0;
  }
  .color-dot[style*="#fff"] {
    border: 1px solid #bbb;
  }
  @media (max-width: 700px) {
    .collections {
      grid-template-columns: 1fr 1fr;
      gap: 1em;
      padding: 1em 0;
    }
    .collection-card__image {
      max-width: 100%;
    }
  }
  @media (max-width: 480px) {
    .collections {
      grid-template-columns: 1fr;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:general.collections_grid",
  "settings": [
    {
      "type": "select",
      "id": "grid_item_width",
      "label": "t:labels.grid_item_width",
      "options": [
        { "value": "collections--compact", "label": "t:options.size.small" },
        { "value": "collections--full", "label": "t:options.size.large" }
      ],
      "default": "collections--full"
    },
    {
      "type": "range",
      "id": "grid_gap",
      "label": "t:labels.grid_gap",
      "min": 0,
      "max": 50,
      "step": 5,
      "unit": "px",
      "default": 30
    }
  ],
  "presets": [{ "name": "t:general.collections_grid" }]
}
{% endschema %}
