



<div class="collections">
  {% paginate collection.products by 20 %}
    {% for product in collection.products %}
      <div class="collection-card">
        {% if product.featured_image %}
          <a href="{{ product.url }}" class="collection-card__image-wrap">
            <img
              class="collection-card__image"
              src="{{ product.featured_image | image_url: width:600, height:800, crop:'center' }}"
              alt="{{ product.title }}"
              loading="lazy"
              width="600"
              height="800"
              style="display: block; margin: 0 auto; background: #000;"
            >
          </a>
        {% endif %}
        <div class="collection-card__content">
          <a href="{{ product.url }}" class="collection-card__title">{{ product.title }}</a>
          <p class="collection-card__price">{{ product.price | money }}</p>
        </div>
      </div>
    {% endfor %}
    <div class="collection-pagination">
      {{ paginate | default_pagination }}
    </div>
  {% endpaginate %}
</div>

{% stylesheet %}


.collections-title {
  text-align: center;
  font-size: 2.5em;
  font-weight: 900;
  margin: 1.5em 0 2em 0;
  background: linear-gradient(90deg, #ff6a00, #ee0979, #00c3ff);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  text-fill-color: transparent;
  letter-spacing: 1px;
  font-family: 'Montserrat', Arial, sans-serif;
  text-transform: uppercase;
}
.collections {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
  gap: 30px;
  padding: 2em 0;
}
.collection-card {
  background: #fff;
  border-radius: 12px;
  box-shadow: 0 2px 12px rgba(0,0,0,0.06);
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-decoration: none;
  color: inherit;
  transition: box-shadow 0.2s;
  min-height: 420px;
  position: relative;
}
.collection-card:hover {
  box-shadow: 0 8px 32px rgba(0,0,0,0.13);
}
.collection-card__image-wrap {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #000; 
  overflow: hidden;
  aspect-ratio: 3/4;
  text-decoration: none;
}
.collection-card__image {
  width: 100%;
  max-width: 260px;
  height: auto;
  object-fit: cover;
  transition: transform 0.3s cubic-bezier(.4,0,.2,1);
  border-radius: 0;
  display: block;
}
.collection-card:hover .collection-card__image {
  transform: scale(1.07);
}
.collection-card__content {
  width: 100%;
  padding: 1.2em 1em 1.5em 1em;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0.5em;
}
.collection-card__title {
  font-family: 'Montserrat', Arial, sans-serif;
  font-weight: 700;
  font-size: 1.15em;
  margin: 0.5em 0 0.2em 0;
  text-align: center;
  color: #222;
  text-decoration: none;
  letter-spacing: 0.5px;
  text-transform: uppercase;
  display: block;
  transition: color 0.2s;
}
.collection-card__title:hover {
  color: #ee0979;
}
.collection-card__price {
  font-family: 'Roboto', Arial, sans-serif;
  color: #222;
  font-size: 1.1em;
  font-weight: 500;
  margin-bottom: 0.4em;
  letter-spacing: 0.5px;
}

.collection-pagination,
.collection-pagination nav,
.collection-pagination ul {
  display: flex !important;
  justify-content: center !important;
  align-items: center !important;
  gap: 0.5em;
  margin: 2em 0 0 0;
  font-family: 'Montserrat', Arial, sans-serif;
  text-align: center;
  list-style: none;
  padding: 0;
}

.collection-pagination a,
.collection-pagination span,
.collection-pagination li a,
.collection-pagination li span {
  display: inline-block;
  padding: 0.5em 1.1em;
  border-radius: 6px;
  background: #000;
  color: #fff !important;
  font-weight: 700;
  text-decoration: none;
  transition: background 0.2s, color 0.2s;
  border: 1px solid #000;
  margin: 0 2px;
}

.collection-pagination .current,
.collection-pagination a:hover,
.collection-pagination li span.current,
.collection-pagination li a:hover {
  background: #222;
  color: #fff !important;
  border: 1px solid #222;
}

.collection-pagination .deco,
.collection-pagination li.deco {
  background: transparent;
  color: #bbb !important;
  border: none;
  padding: 0.5em 0.7em;
  font-weight: 700;
}
@media (max-width: 700px) {
  .main-header {
    margin-top: 1em;
    margin-bottom: 1em;
  }
  .site-title {
    font-size: 2em;
  }
  .main-nav ul {
    gap: 1.2em;
  }
  .collections {
    grid-template-columns: 1fr 1fr;
    gap: 1em;
    padding: 1em 0;
  }
  .collection-card__image {
    max-width: 100%;
  }
}
@media (max-width: 480px) {
  .collections {
    grid-template-columns: 1fr;
  }
}
{% endstylesheet %}

